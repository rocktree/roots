<%= simple_form_for @item, :url => @url do |f| %>

  <%= form_section @model.to_s.humanize.downcase do %>
    <% @model.column_names.each do |attribute| %>
      <% if attribute == 'body' %>
        <%= wysiwyg(f) %>
      <% else %>
        <%= f.input attribute.to_sym if form_eligible?(attribute) %>
      <% end %>
    <% end %>
  <% end %>

  <%= f.button :submit %>

<% end %>
