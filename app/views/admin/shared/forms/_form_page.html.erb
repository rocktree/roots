<div id="form">

  <header class="intro">
    <div class="breadcrumbs">
      <% index_label ||= classname %>
      <%= link_to model_plural.downcase, index %>
      <span>/</span>
      <%= link_to title.downcase, "#", :class => "disabled title"  %>
    </div>
    <h1 class="title"><%= title %></h1>
  </header>

  <section class="form-container">
    <%= render :partial => 'admin/shared/status' %>
    <% if action_name == 'edit' %>
      <%= render :partial => 'edit_form' rescue render :partial => 'form' %>
    <% else %>
      <%= render :partial => 'form' %>
    <% end %>
  </section>

</div>